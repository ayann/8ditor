extends ../layout
block append head
  link(rel='stylesheet', href='/stylesheets/chat.css')

block append bottom
  script(type='text/javascript', src='/javascripts/ace/src-min-noconflict/ace.js', charset="utf-8")
  script(type='text/javascript', src='/javascripts/client.js', charset="utf-8")
  script(type='text/javascript', src='/socket.io/socket.io.js')
  script(type='text/javascript', src='/javascripts/sidebar.js')

  script.
    var editor = ace.edit("editor");
    editor.setTheme("ace/theme/ambiance");
    editor.session.setMode("ace/mode/javascript");
    editor.getSession().setTabSize(2);
    editor.getSession().setUseSoftTabs(true);

block content
  div.row
    section#editor.z-depth-3.col.s12.m12
  div.row
    include ../partials/chat_box
  div.row
    i#sidebar_button.material-icons reorder
    div.sidebar.z-depth-3
      p
        //- i#close_sidebar.left.material-icons &nbsp; exit_to_app
        i#close_sidebar.right.material-icons clear &nbsp;
        br
        br
        .input-field.col.s12
          select#language(name='language')
          label Choisir un langage 

        .input-field.col.s12
          select#theme(name='theme')
            option(value="1") JavaScript
            option(value="2") Ruby
            option(value="3") Java
            option(value="4") C++
          label Changer de theme

        .input-field.col.s12
          p.range-field
            input#police(type="range", min="12", max="20", name='police')
          label Taille police
          
 
